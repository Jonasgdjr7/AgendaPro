@model AgendaPro.Aplicacao.Dtos.SalaDto

@{
    ViewData["Title"] = "Excluir Sala";
}

<h1>Excluir Sala</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Erro!</strong>
        <div asp-validation-summary="All"></div>
    </div>
}

<h3>Tem a certeza de que quer excluir esta sala?</h3>
<div>
    <h4>Sala</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacidade)
        </dd>
    </dl>

    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>