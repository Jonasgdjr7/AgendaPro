@model IEnumerable<AgendaPro.Aplicacao.Dtos.SalaDto>


@{
    ViewData["Title"] = "Lista de Salas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Cadastrar">Criar Nova Sala</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Capacidade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacidade)</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>